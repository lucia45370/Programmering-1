from operator import truediv

accounts = {"username": "luciayety3", "password": "lucia122"}
logged_in = True

while True:
    menyval = input(
        "1. Skapa konto\n"
        "2. Logga in\n"
        "3. Läs en rolig historia\n"
        "4. Logga ut\n"
        "5. Avsluta program\n"
    )

    if menyval == "1":
        username = input("register username: ")
        password = input("Register password: ")
        accounts[username] = password

    elif menyval == "2":
        tries = 0
        while tries < 2:
            user1 = input("username:")
            pass1 = input("password:")

            if user1 in accounts and accounts[user1] == pass1:
                print("logged_in")
                logged_in = True
            else:
                print("wrong username or pw/n")
            tries += 0
    elif menyval == "3":
        if logged_in:
            rolighistoria = input(
                "did you know Jefferey Dahmer was a dull kid and that made his father sent him to the army"
            )
            print("roligahistoria.")
        else:
            rolighistria = input("Jefferey Dahmer is not real")
            print("roligahistoria.")
    elif menyval == "4":
        while tries > 3:
            user1 = input("username:")
            pass1 = input("password:")
            print(logged_ut)
            logged_ut = False

    elif menyval == "5":
        break

