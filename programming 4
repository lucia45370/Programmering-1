import turtle, random

adam = turtle.Turtle()
adam.pensize(3)
adam.shapesize(1)
adam.hideturtle()
adam.shapesize(10)
adam.showturtle()
adam.speed(2)

while True:
    adam.right(random.randint(20,100))
    adam.forward(5)
 

# Shape - “arrow”, “turtle”, “circle”, “square”, “triangle”, “classic”
adam.shape("turtle")
